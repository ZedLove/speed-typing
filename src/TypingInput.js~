const TypingInput = () => {

  const saveInput = () => {
    console.log('word is:' + input.word);
  };
  
  const {input, handleInputChange, handleSubmit} = useInput(saveInput);

  return (
      <form onSubmit={handleSubmit}>
      <label htmlFor="word">Enter your word</label>
      <input id="word" type="text" value={input.word} onChange={handleInputChange} />
      </form>
    );
}
